<script type="text/javascript">




var runReport = function() {
  var query = "SELECT segments.userData.CompanyId, (filter(count(*), userExperience = 'NORMAL') / count(*) * 100) AS Percent FROM transactions";
  search(query,function(data){
    buildReport(data[0].results)
  });
}

var buildReport =  function(data) {
  buildList(data);
  buildSla(data);
}

var buildList = function(data){
  var table = $('#sla_table') 
  table.DataTable( {
        data: data,
        columns: [
            { title: "Company" },
            { title: "SLA %" ,
              render: function ( data, type, row, meta ) {
                return Math.round(data * 10) / 10;
              }
            }
        ],
        order: [[ 1, "asc" ]]
    } );

    table.DataTable().on('click', 'tr[role="row"]', function () {
        var tr = $(this);
        tr.toggleClass("selected");
        var row = table.DataTable().row( tr );
        showDetails(row.data());
    } );
}

var showDetails = function(record){
  var company = record[0];
  var percent = record[1];
  
  var query = "SELECT application, (filter(count(*), userExperience = 'NORMAL') / count(*) * 100) AS Percent FROM transactions WHERE segments.userData.CompanyId = '"+company+"'";
  search(query,function(data){
    buildApplications(company,percent,data[0].results)
  });

  var query = "SELECT userExperience,count(userExperience) FROM transactions WHERE segments.userData.CompanyId = '"+company+"'";
  search(query,function(data){
    buildExperience(company,data[0].results)
  });

}

var buildApplications = function(company,percent,data){
  var chart = c3.generate({
      bindto: '#applications',
      data: {
          columns: data,
          type : 'donut'
      },
      donut: {
          title: Math.round(percent * 10) / 10+" % "
      }
  })
}

var buildExperience = function(company,data){
  var colors = [];
  data.forEach(function(rec){
    colors.push(getHealthColor(rec[0]));
  })

  var chart = c3.generate({
      bindto: '#experience',
      data: {
          columns: data,
          type : 'donut'
      },
      donut: {
          title: "Experience"
      },
      color: {
          pattern: colors
      }
  })
}


var buildSla = function(data){
  var totalCounts = 0;
  var percentage = 0;

  var colors = [];
  data.forEach(function(rec){
    totalCounts+= rec[1];
  })

  if(data.length > 0){
    percentage = totalCounts/data.length;
  }

  var chart = c3.generate({
      bindto:"#sla",
      data: {
          columns: [
              ['data', percentage]
          ],
          type: 'gauge'
      },
      gauge: {
      },
      color: {
          pattern: ['#EF5C5D', '#FFD24D', '#79DD1B'], // the three color levels for the percentage values.
          threshold: {
              values: [90, 93,95]
          }
      },
      size: {
          height: 100
      }
  });
  setEmoji(percentage);

}
  
runReport(); 


